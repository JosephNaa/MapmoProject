<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8E69C"
    >
    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E2142"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="환경 설정"
            android:fontFamily="@font/goyang"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:text="백그라운드 실행"
                android:textSize="20sp"
                android:fontFamily="@font/goyang"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:layout_weight="8"/>

            <Switch
                android:id="@+id/serviceSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1" />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/dxrmbxb_kscpc_euc_h"
            android:layout_marginRight="15dp"
            android:text="앱을 종료하여도 백그라운드 서비스를 통하여 사용자에게 알림을 보내드립니다 "
            android:textSize="15sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="메모 알림 반경 설정"
            android:layout_marginLeft="15sp"
            android:fontFamily="@font/goyang"
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:textColor="@android:color/background_dark"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/dxrmbxb_kscpc_euc_h"
            android:text="알림 메시지를 받을 범위를 설정합니다"
            android:textSize="15sp"/>
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/radio50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="@font/dxrmbxb_kscpc_euc_h"
                android:text="50미터 안에서 알림받기" />
            <RadioButton
                android:id="@+id/radio100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="@font/dxrmbxb_kscpc_euc_h"
                android:text="100미터 안에서 알림받기" />
            <RadioButton
                android:id="@+id/radio300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="@font/dxrmbxb_kscpc_euc_h"
                android:text="300미터 안에서 알림받기" />
            <RadioButton
                android:id="@+id/radio500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="@font/dxrmbxb_kscpc_euc_h"
                android:text="500미터 안에서 알림받기" />
            <RadioButton
                android:id="@+id/radio1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="@font/dxrmbxb_kscpc_euc_h"
                android:text="1000미터 안에서 알림받기" />
        </RadioGroup>


    </LinearLayout>

</LinearLayout>